<%- include('../partials/header') %>
<div class="container mt-4">
    <div class="container mb-4 text-center">
        <a class="btn btn-success" href="/items/add">Add New Items</a><br><br>
        <form action="/items" method="GET">
            <div class="form-group">
                <input type="text" class="form-control" id="search" placeholder="item name" name="search"><br>
                <button type="submit" class="btn btn-primary">Search Item</button>
            </div>
        </form>
    </div>
    <table class="table table-hover">
        <thead>
            <tr class="text-center">
                <th scope="col">No</th>
                <th scope="col">Item Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Type</th>
                <th scope="col">Expire Date</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
       <% for( let i = 0; i < data.length; i++ ) {%>
            <tr class="text-center">
                <td> <%= i+1%> </td>
                <td> <%= data[i].name %> </td>
                <td> <%= `${idrFormat(data[i].price)}` %> </td>
                <td> <%= data[i].quantity %> </td>
                <td> <%= data[i].type %> </td>
                <td> <%= `${expDateFormat.expDateFormat1(data[i].exp_date)}` %></td>
                <td>
                    <a href="/items/edit/<%= data[i].id %> " class="btn btn-warning"> Edit </a>     
                    <a href="/items/delete/<%= data[i].id %> " class="btn btn-danger"> Delete </a>
                </td>
            </tr>
                <% } %>
        </tbody>
    </table>
</div>
<%- include('../partials/footer') %>